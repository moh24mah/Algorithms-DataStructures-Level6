// Binary Search O(Log N)
// A fast algorithm for finding a target value within a sorted array.
// Binary Search is a divide-and-conquer search algorithm that finds the position of a target value within a sorted array.
// Binary Search compares the target value to the middle element of the array; if they are not equal, the half in which the target cannot lie is eliminated, and the search continues on the remaining half until the target is found or the search space is empty.

using System;

namespace Binary_Search
{
    internal class Program
    {
        //Method to perform binary search
        static int BinarySearch(int[] arr, int x)
        {
            int Start = 0, End = arr.Length - 1, Trials = 0;

          if (x < arr[Start] || x > arr[End])
                return -1;

            else if (x == arr[Start] ) return Start;

            else if (x == arr[End]) return End;

           else {

                while (Start <= End)
                {
                    int Middle = Start + (End - Start) / 2;
                    ++Trials;

                    Console.WriteLine("Trial = " + Trials);

                    if (arr[Middle] == x)
                        return Middle;

                    if (x > arr[Middle])
                        Start = Middle + 1;

                    else End = Middle - 1;
                }
           }
            return -1;
        }

        static void Main(string[] args)
        {
            int[] arr = { 22, 25, 37, 41, 45, 46, 49, 51, 55, 58, 70, 80, 82, 90, 95 }; // Sorted array
            int x = 22; // Element to be searched

            Console.WriteLine("Sorted Array: ");
            foreach (var item in arr)
                Console.WriteLine(item + " ");
            Console.WriteLine($"Searched for: {x}");

            int result = BinarySearch(arr, x);

            if (result == -1)
                Console.WriteLine("Element not found in the Array.");

            else Console.WriteLine("Element found at index: " + result);
        }
    }
}
