//Linear Search O(N)
// Linear Search is a straightforward algorithm that checks every element in a list or array until it finds the target value.
// If the element is found, the algorithm returns its index. 
// If the list does not contain the element, it indicates that as well.

using System;

namespace Linear_Search
{
    internal class Program
    {
        static int LinearSearch(int[] arr, int value)
        {
            foreach (int index in arr)
            {
                if (index == value) return index;
            }

            return -1;
        }

        static void Main(string[] args)
        {
            int[] arr = { 64, 34, 26, 12, 22, 11, 90 };
            
            int value = 11;

            int result = LinearSearch(arr, value);

            if (result == -1)
                Console.WriteLine($"Element {value} not found in the Array.");

            else Console.WriteLine("Element found at index: " + result);  
        }
    }
}
