//O(n^2)
using System;

namespace Selection_Sort
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int[] arr = { 64, 34, 25, 12, 22, 90, 90, 12 };

            printSelectedSort(arr, "unSorted");

            int[] sortedArrAsc = SelectedSortAsc(arr);
            printSelectedSort(sortedArrAsc, "\n\nSorted by Selected Sort Descending");
            

            int[] sortedArrDes = SelectedSortDes(arr);
            printSelectedSort(sortedArrDes, "\n\nSorted by Selected Sort Ascending");

            //other function
            int[] asortedArrDes = SelectedSort(arr);
            printSelectedSort(asortedArrDes, "Sorted by Selected Sort Descending");

            int[] asortedArrAsc = SelectedSort(arr, false);
            printSelectedSort(asortedArrAsc, "Sorted by Selected Sort Ascending");
        }

        //Selected Sort Ascending
        static int[] SelectedSortAsc(int[] arr)
        {
            for (int i = 0; i <= arr.Length - 1; i++)
            {
                for (int j = 0; j <= i; j++)
                {
                    int minIndex = 0;

                    // Find the Minimum element in unsorted array
                    if (arr[j] < arr[i])
                    {
                        minIndex = arr[i];
                        arr[i] = arr[j];
                        arr[j] = minIndex;
                    }
                }
            }
            return arr;
        }

        //Selected Sort Descending
        static int[] SelectedSortDes(int[] arr)
        {
            for (int i = 0; i <= arr.Length - 1; i++)
            {
                for (int j = 0; j <= i; j++)
                {
                    int maxIndex = 0;
                    
                    // Find the Maximum element in unsorted array
                    if (arr[j] > arr[i])
                    {
                        maxIndex = arr[i];
                        arr[i] = arr[j];
                        arr[j] = maxIndex;
                    }
                }
            }
            return arr;
        }

        //one Selected Sort Function (Ascending, Descending)
        static int[] SelectedSort(int[] arr, bool des = true) //by default Descending, we can make it with (enum) also
        {
            for (int i = 0; i <= arr.Length - 1; i++)
            {
                for (int j = 0; j <= i; j++)
                {
                    int Index = 0;

                    // Find the Minimum element in unsorted array
                    if (des && arr[j] < arr[i])
                    {
                        Index = arr[i];
                        arr[i] = arr[j];
                        arr[j] = Index;
                    }

                    // Find the Maximum element in unsorted array
                    else if (!des && arr[j] > arr[i])
                    {
                        Index = arr[i];
                        arr[i] = arr[j];
                        arr[j] = Index;
                    }
                }
            }

            return arr;
        }

        static void printSelectedSort(int[] arr, string Line)
        {
            Console.WriteLine(Line);
            foreach (int index in asortedArrAsc)
            {
                Console.Write($"{index} ");
            }
        } 
    }
}
